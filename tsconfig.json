{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*":[
        "src/types/*"
      ]
    },
    "sourceRoot": "src",
    "outDir": "dist",
    "lib": [
      "es2017",
      "dom",
      "esnext"
    ]
  },
  "typeRoots": [
    "node_module/@types"
  ],
  "include": [
    "src/**/*",
    "config/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}